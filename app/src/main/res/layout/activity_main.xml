<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#a5a58d"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ffe8d6"
        android:padding="10dp"
        android:textSize="48sp"
        android:textColor="@color/textColor"
        android:gravity="end|bottom"/>

    <LinearLayout
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/buttonsBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn7"
                android:onClick="onDigitClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:text="@string/_7"/>

            <Button
                android:id="@+id/btn8"
                android:onClick="onDigitClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:text="@string/_8"/>

            <Button
                android:id="@+id/btn9"
                android:onClick="onDigitClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:text="@string/_9"/>

            <Button
                android:id="@+id/divideBtn"
                android:onClick="onOperatorClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:text="@string/_divide"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn4"
                android:onClick="onDigitClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:text="@string/_4"/>

            <Button
                android:id="@+id/btn5"
                android:onClick="onDigitClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:text="@string/_5"/>

            <Button
                android:id="@+id/btn6"
                android:onClick="onDigitClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:text="@string/_6"/>

            <Button
                android:id="@+id/multiplyBtn"
                android:onClick="onOperatorClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:text="@string/_multiply"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn1"
                android:onClick="onDigitClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:text="@string/_1"/>

            <Button
                android:id="@+id/btn2"
                android:onClick="onDigitClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:text="@string/_2"/>

            <Button
                android:id="@+id/btn3"
                android:onClick="onDigitClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:text="@string/_3"/>

            <Button
                android:id="@+id/subtractBtn"
                android:onClick="onOperatorClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:text="@string/_subtract"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn0"
                android:onClick="onDigitClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@color/textColor"
                android:text="@string/_0"/>

            <Button
                android:id="@+id/btnDot"
                android:onClick="onDecimalPointClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="@color/textColor"
                android:text="@string/_dot"/>

            <Button
                android:id="@+id/btnCLR"
                android:onClick="onClearClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                android:text="@string/_clr"/>

            <Button
                android:id="@+id/plusBtn"
                android:onClick="onOperatorClick"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:text="@string/_plus"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_margin="25dp"
                android:id="@+id/btnEqual"
                android:onClick="onEqualClick"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:background="@drawable/shape"
                android:layout_weight="3"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                android:text="@string/_equal"/>

            <Button
                android:layout_margin="25dp"
                android:onClick="onDelOneSpaceClick"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:background="@drawable/del"
                android:layout_weight="1"
                android:textColor="@color/textColor"
                android:textSize="30sp"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>